{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "varsIgnorePattern": "^compileErr$"
      }
    ],
    "new-cap": ["error", { "newIsCapExceptions": ["serr"] }],
    "camelcase": ["error", { "allow": ["^handle_capability_"] }]
  }
}
